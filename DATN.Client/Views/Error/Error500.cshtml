@using DATN.Client.Helper
@{
    UserInfo userInfo = SessionHelper.GetObject<UserInfo>(Context.Session, "user");
}

<section class="error-404 min-vh-100 d-flex flex-column align-items-center justify-content-start my-5 ">
    <img src="/assets/img/errors/500.svg" width="300" height="300" class="img-fluid py-4" alt="Internal server error">
    <h2 class="text-center">Lỗi máy chủ nội bộ, xin lỗi vì sự bất tiện này.</h2>
    <a class="btn btn-secondary" asp-area="@(userInfo?.Role == "Admin" ? "Admin" : "")" asp-controller="Home" asp-action="Index">

        <i class="bi bi-arrow-return-left"></i>
        <span>Trở về trang chủ</span>
    </a>
</section>