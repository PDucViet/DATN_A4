@page "categories";
@{
    // var sliderValue = new int[] { 30, 70 };
    var currentSelectedCate = 0;
    if (ViewBag.subCateId != 0)
    {
         currentSelectedCate = ViewBag.subCateId;
    }
    
}
    
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Your Title Here</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/css/Category.css" rel="stylesheet">
    <style>
        .slider-container input[type="text"] {
            text-align: center;
            width: 100%;
            margin-bottom: 10px;
        }

        .slider-container input[type="range"] {
            width: 100%;
        }

        .btn-selected {
            background-color: #e7e7e7;
            border: 1px solid #ccc;
            display: inline-flex;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="background w-100" style="background-image: url('https://cdn.tgdd.vn/2024/06/campaign/MHD-Desktop-1920x550-3.jpg')"></div>
    <div class="ps-1 pe-1 d-flex justify-content-center">
        <div class="custom-container container-fluid">

            <!-- Carousel -->
            @await Component.InvokeAsync("Carousel")
            @if (ViewBag.parrentCateId != null)
            {
                @await Component.InvokeAsync("Filter", new { cateId = ViewBag.cateId, parrentCateId = ViewBag.parrentCateId })
            }
            else
            {
                @await Component.InvokeAsync("Filter", new { cateId = ViewBag.cateId })
            }

        </div>
        <!-- Grid products -->
        @if (currentSelectedCate!=0)
        {
            @await Component.InvokeAsync("GridProducts", new { categoryId = currentSelectedCate })
        }
        else
        {
            @await Component.InvokeAsync("GridProducts", new { categoryId = ViewBag.cateId })
        }
    </div>

    <script src="~/js/Category/Category.js"></script>
    <script>
    </script>
</body>

</html>