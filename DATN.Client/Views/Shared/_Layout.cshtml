    <script>
        if (document.getElementsByClassName("user-email").length>0) {
            if (localStorage.getItem(`giohang-${document.getElementsByClassName("user-email")[0].innerHTML}`)) {
                var dataLocal = JSON.parse(localStorage.getItem(`giohang-${document.getElementsByClassName("user-email")[0].innerHTML}`))
                document.querySelector(".count-cart").innerHTML = dataLocal.length
            } else {
                document.querySelector(".count-cart").innerHTML = 0
            }
        }
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "200",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

        $(function () {

            var toastMessage = '@TempData["ToastMessage"]';
            var toastType = '@TempData["ToastType"]';
            if (toastMessage && toastType) {
                toastr[toastType](toastMessage);
            }
        });

        var currentAddress = document.getElementsByClassName("address-btn")[0].getAttribute("addressId")
        var listAddress = document.getElementsByClassName("address-btn")
        sessionStorage.setItem("currentAddress", currentAddress)
        for (var item of listAddress) {
            if (item.getAttribute("addressId") === currentAddress) {
                item.classList.add("currentAddress")
            }

        }
        for (var item of listAddress) {
            item.addEventListener("click", (e) => {
                for (var a of listAddress) {
                    a.classList.remove("currentAddress")
                }
                e.target.classList.add("currentAddress")
                sessionStorage.setItem("currentAddress", e.target.getAttribute("addressId"))
                return
            })
        }
    </script>

