                </div>
                <div class="modal-body">
                    @{
                        var response = await _httpClient.GetAsync("https://localhost:7095/api/Address/GetAll");
                        if (response.IsSuccessStatusCode)
                        {
                            var data = await response.Content.ReadAsStringAsync();
                            var addresses = JsonConvert.DeserializeObject<List<Address>>(data);
                                    @for (int i = 0; i < addresses.Count; i += 2)
                            {
                                if (i + 1 < addresses.Count)
                                {
                                            <div class="d-flex justify-content-around">
                                                <p addressId="@addresses[i].AddressID" class="address-btn" style="border-bottom:1px solid rgba(0,0,0,0.1);margin-right:10%;font-size:14px; padding:8px 12px; width:100%">@addresses[i].Description</p>
                                                <p addressId="@addresses[i+1].AddressID" class="address-btn" style="border-bottom:1px solid rgba(0,0,0,0.1);margin-right:10%;font-size:14px; padding:8px 12px; width:100%">@addresses[i + 1].Description</p>
                                            </div>
                                }
                                else
                                {

                                            <div class="d-flex align-items-start">
                                                <p addressId="@addresses[i].AddressID" class="address-btn" style="border-bottom:1px solid rgba(0,0,0,0.1);font-size:14px; padding:8px 12px; width:40%">@addresses[i].Description</p>
                                            </div>
                                }
                            }
                        }
                    }
                </div>
            </div>
        </div>
