@model DATN.Core.ViewModel.AndressVM.AddressVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chỉnh sửa địa chỉ</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Address" asp-action="Index">Địa chỉ</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="EditAddress" id="category-form" asp-controller="Address" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AddressID" /> 
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="5" > </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" id="target-btn" value="Lưu" class="btn btn-success m-4" />
                    <a asp-action="Index" asp-controller="Address" class="btn btn-secondary m-4">Trở lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    const targetBtn = document.getElementById('target-btn');

    function disableButton() {
        targetBtn.disabled = true;
        $("#category-form").submit();
    }
</script>
 