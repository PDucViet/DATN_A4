@model DATN.Core.ViewModel.AndressVM.AddressVM

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Hoàn cảnh</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Category" asp-action="Index">Địa chỉ</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" id="" asp-controller="Address" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AddressID" />
                <div class="form-group">
                    <label asp-for="AddressID" class="control-label">Id</label>
                    <input asp-for="AddressID" class="form-control" readonly />
                    <span asp-validation-for="AddressID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="5" readonly> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index" asp-controller="Address" class="btn btn-secondary my-4">Trở lại</a>
                </div>
            </form>
        </div>
    </div>
</div> 