@model DATN.Core.ViewModel.MagazineVM.MagazineVM
@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chi tiết</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Magazine" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Detail" id="category-form" asp-controller="Magazine" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MagazineId" />
                <div class="form-group">
                    <label asp-for="Caption" class="control-label">Tên Caption</label>
                    <input asp-for="Caption" class="form-control" readonly />
                    <span asp-validation-for="Caption" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label">Tên Caption</label>
                    <input asp-for="Status" class="form-control" readonly />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Nội dung</label>
                    @Html.Raw(Model.Content)
                   
                </div>
                <br />
                <div class="form-group">
                  
                    <img src="@Model.Image" style="width: 100px; height: auto;" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" asp-controller="Magazine" class="btn btn-secondary my-4">Trở lại</a>
                </div>
            </form>
        </div>
    </div>
</div>