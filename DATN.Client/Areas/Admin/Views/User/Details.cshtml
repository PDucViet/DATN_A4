@model DATN.Core.ViewModels.UserViewModel.UserVM

@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="User" asp-action="Index">Danh sách người dùng</a></li>
        <li class="breadcrumb-item active">Chi tiết người dùng</li>
    </ol>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Họ và tên
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Ngày sinh
            </dt>
            <dd class="col-sm-10">
                @Model.Dob?.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                Số điện thoại
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                Địa chỉ
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                Thời điểm đăng nhập
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastLoginTime)
            </dd>
            <dt class="col-sm-2">
                Voucher
            </dt>
            <dd class="col-sm-10">
                @if (Model.ListVoucherNameByUser != null)
                {
                    <span>@string.Join(", ",  Model.ListVoucherNameByUser)</span>
                }
            </dd>
            <dt class="col-sm-2">
                Chức vụ
            </dt>
            <dd class="col-sm-10">
                @if (Model.Roles != null)
                {
                    <span>@string.Join(", ",  Model.Roles)</span>
                }
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-danger m-4">Sửa</a> |
        <a asp-action="Index" asp-controller="User" class="btn btn-secondary m-4">Trở lại</a>
    </div>
</div>



