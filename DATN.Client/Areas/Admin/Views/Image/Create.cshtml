
@model DATN.Core.ViewModel.ImagePath.ImageVM
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm mới </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Image" asp-action="Index">Quay lại</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>
    <div class="row">
        <div class="col-md-8">
            <form id="category-form" asp-action="Create" asp-controller="Image" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group">
                    <label asp-for="Type" class="control-label">Trạng thái</label>
                    <select asp-for="Type" class="form-control">
                        <option value="">--Loại Ảnh--</option>
                        <option value="Banner">Banner</option>
                    </select>
                </div>
                <div id="inputContainer" style="display: none;">
                    <div class="form-group">
                        <label for="additionalInput" class="control-label">Ảnh</label>
                        <input id="additionalInput" name="Img" type="file" class="form-control" multiple accept="image/*">
                    </div>
                </div>
             
                <div class="form-group">
                    <input type="submit" id="target-btn" value="Tạo mới" class="btn btn-success m-4" />
                    <a asp-action="Index" asp-controller="Image" class="btn btn-secondary m-4">Trở lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    const targetBtn = document.getElementById('target-btn');

    function disableButton() {
        targetBtn.disabled = true;
        $("#category-form").submit();
    }

    document.getElementById('Type').onchange = function () {
        var selectedValue = this.value;
        var inputContainer = document.getElementById('inputContainer');
        var additionalInput = document.getElementById('additionalInput');

        if (selectedValue === 'Banner') {
            inputContainer.style.display = 'block'; // Hiển thị container chứa ô input
            additionalInput.value = ''; // Đặt lại giá trị của ô input nếu cần thiết
        } else {
            inputContainer.style.display = 'none'; // Ẩn container nếu không chọn loại 1 hoặc loại 2
        }
    };
</script>
