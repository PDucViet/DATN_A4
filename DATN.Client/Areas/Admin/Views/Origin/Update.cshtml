@model DATN.Core.ViewModel.OriginVM.OriginVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chỉnh sửa </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Origin" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Update1" id="category-form" asp-controller="Origin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>             
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control input_name" id="nameInput" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control input_mota" rows="5" id="motaInput"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" id="target-btn" value="Lưu" class="btn btn-success m-4" />
                    <a asp-action="Index" asp-controller="Origin" class="btn btn-secondary m-4">Trở lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    const targetBtn = document.getElementById('target-btn');

    function disableButton() {
        targetBtn.disabled = true;
        $("#category-form").submit();
    }
    document.querySelector('form').addEventListener('submit', function (event) {
        const inputField = document.getElementById('nameInput');
        const inputMota = document.getElementById('motaInput');

        // Trim the value of the input field
        inputField.value = inputField.value.trim();
        inputMota.value = inputMota.value.trim();
    });
    document.getElementById('category-form').addEventListener('submit', (e) => {
        var inputName = document.querySelector('.input_name');
        var inputMota = document.querySelector('.input_mota');
        if (inputName.value == "" || inputMota.value == "") {
            alert("Không được bỏ trống");
            e.preventDefault()

        }
    });
</script>


