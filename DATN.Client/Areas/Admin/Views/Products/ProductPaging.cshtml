                const response = await fetch(`https://localhost:7095/api/Product/Delete?id=${id}`, { method: 'DELETE' });
                if (response.ok) {
                    alert("Xóa thành công");
                    window.location.href = 'https://localhost:7134/Admin/products/Index';
                } else {
                    alert("Xóa thất bại");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("Đã xảy ra lỗi");
            }
        }
    }
</script>

