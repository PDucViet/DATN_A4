@model DATN.Core.ViewModel.BrandVM.BrandVM

@{
	ViewData["Title"] = "Details";
}

<div class="container-fluid px-4">
	<h1 class="mt-4">Hoàn cảnh</h1>
	<ol class="breadcrumb mb-4">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Brand" asp-action="Index">Brand</a></li>
		<li class="breadcrumb-item active">Chi tiết</li>
	</ol>
	<div class="row">
		<div class="col-md-8">
			<form asp-action="Edit" id="" asp-controller="Brand" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="BrandId" />
				<div class="form-group">
					<label asp-for="BrandId" class="control-label">Id</label>
					<input asp-for="BrandId" class="form-control" readonly />
					<span asp-validation-for="BrandId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Name" class="control-label">Tên</label>
					<input asp-for="Name" class="form-control" rows="5" readonly> 
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<br />
				<div class="form-group">
					<label for="file" class="control-label">Ảnh</label>
					
					<img readonly src="@Model.ImageUrl" style="width: 150px; height: auto;" />
				</div>
				<div class="form-group">
					<a asp-action="Index" asp-controller="Brand" class="btn btn-secondary my-4">Trở lại</a>
				</div>
			</form>
		</div>
	</div>
</div> 