@model DATN.Core.ViewModel.NotificationVM.NotificationVM  
@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chi tiết</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Notification" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Detail" id="category-form" asp-controller="Notification" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NotificationId" />
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="5" readonly> </textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label">Mô tả</label>
                    <textarea asp-for="Subject" class="form-control" rows="5" readonly> </textarea>
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index" asp-controller="Notification" class="btn btn-secondary my-4">Trở lại</a>
                </div>
            </form>
        </div>
    </div>
</div>