@model DATN.Core.ViewModels.UserViewModel.UserVM

@{
    ViewData["Title"] = "Edit";
}
<section class="bg-light p-2 p-md-3 p-xl-4 vh-100">
    <h3 class="">Chỉnh sửa thông tin cá nhân</h3>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="User" asp-controller="Profile" asp-action="Index">Thông tin cá nhân</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card border border-light-subtle rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <form asp-area="User" asp-action="Edit" asp-controller="Profile" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="NormalizedEmail" />
                            <input type="hidden" asp-for="UserName" />
                            <input type="hidden" asp-for="NormalizedUserName" />
                            <input type="hidden" asp-for="SecurityStamp" />
                            <input type="hidden" asp-for="LastLoginTime" />
                            <input type="hidden" asp-for="isActive" />
                            <input type="hidden" asp-for="EmailConfirmed" />
                            <input asp-for="PasswordHash" type="hidden" />
                            <div class="row overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Email" autocomplete="username" aria-required="true" class="form-control" placeholder="name@example.com" required>
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row justify-content-between col-12">
                                    <div class="form-floating mb-3 col-6">
                                        <input asp-for="FullName" autocomplete="username" aria-required="true" class="form-control" placeholder="Nguyen Van A" required>
                                        <label asp-for="FullName" class="form-label" style="margin-left: 10px">Họ và tên</label>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 col-6" style="margin-right: -25px">
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="0999998888" required>
                                        <label asp-for="PhoneNumber" class="form-label" style="margin-left: 10px">Số điện thoại</label>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Dob" class="form-control">
                                        <label asp-for="Dob" class="form-label">Ngày sinh</label>
                                        <span asp-validation-for="Dob" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 ms-1">
                                    <div class="row mb-3">
                                        <input asp-for="IsSentMail" class="form-check col-1 form-control-color">
                                        <label asp-for="IsSentMail" class="form-label col-9">Đăng ký nhận email thông báo</label>
                                        <span asp-validation-for="IsSentMail" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Address" class="form-control" placeholder="Ba Đình Hà Nội">
                                        <label asp-for="Address" class="form-label">Địa chỉ</label>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="Description" rows="5" class="form-control" placeholder="v.v...">
                                        </textarea>
                                        <label asp-for="Description" class="form-label">Mô tả</label>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12" style="margin-left: -5px">
                                    <div class="row ms-2">
                                        <button class="btn bsb-btn-xl btn-primary col-3" id="registerSubmit" type="submit">Lưu </button>
                                        <a asp-action="Index" asp-controller="Profile" class="btn btn-secondary ms-1 col-3">Trở lại</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}