@page
@using DATN.Client.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>

</head>
<section class="bg-light p-3 p-md-4 p-xl-5 height-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div style="border-radius:30px;box-shadow:0 0 100px rgba(0,0,0,0.5)" class="card border border-light-subtle rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">
                                    <div class="text-center mb-4">
                                        <a href="/Home/Index">
                                            <img src="~/Images/Home/logo.png" class="img-fluid w-50 " alt="Momo Logo">
                                        </a>
                                    </div>
                                    <h4 class="text-center">Chào mừng đến DATN - Shop</h4>
                                </div>
                            </div>
                        </div>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="row gy-3 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for ="Input.Email" autocomplete="username" aria-required="true" class="form-control" placeholder="name@example.com" required>
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Password" class="form-control" placeholder="Password" required>
                                        <label asp-for="Input.Password" class="form-label">Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn bsb-btn-xl btn-primary" id="login-submit" type="submit">Đăng nhập</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-12">
                                <hr class="mt-5 mb-4 border-secondary-subtle">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-secondary text-decoration-none">Đăng ký tài khoản</a>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="link-secondary text-decoration-none">Quyên mật khẩu?</a>
                                </div>
                            </div>
                        </div>
