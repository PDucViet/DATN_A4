@page
@using DATN.Client.Areas.Identity.Pages.Account
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<section class="bg-light p-3 p-md-4 p-xl-5 vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div style="border-radius:30px;box-shadow:0 0 100px rgba(0,0,0,0.5)" class="card border border-light-subtle rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">
                                    <div class="text-center mb-4">
                                        <a href="/Home/Index">
                                            <img src="~/Images/Home/logo.png" class="img-fluid w-50 " alt="Momo Logo">
                                        </a>
                                    </div>
                                    <h4 class="text-center">Hãy check email của bạn để nhận được đường dẫn đặt lại mật khẩu</h4>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <hr class="mt-5 mb-4 border-secondary-subtle">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                    <a asp-page="./Login" class="link-secondary text-decoration-none">Về trang đăng nhập</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
